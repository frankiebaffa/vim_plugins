#!/bin/bash
# get current directory
CURR_DIR=$(pwd)
# get script dir
SCRIPT_DIR=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)
PLUGINS_DIR="$SCRIPT_DIR/.."
# check args
if [ -z "$1" ]; then
	echo "Please include the name of the lang server to install, if all then include \"all\"";
	exit 1;
fi
# goto script dir
cd "$PLUGINS_DIR"
# process ls.csv
lines="$(cat ./ls.csv)"
newline="\n"
lines=$lines$newline
# split lines on newline and add to array
line_arr=()
while [[ $lines ]]; do
	line_arr+=( "${lines%%"$newline"*}" )
	lines=${lines#*"$newline"}
done
skip=$((1))
for line in ${line_arr[@]}; do
	if [ $skip -eq 1 ]; then
		skip=$((0))
		continue
	fi
	comma=","
	line=$line$comma
	# split lines on comma and add to array
	sub_arr=()
	while [[ $line ]]; do
		sub_arr+=( "${line%%"$comma"*}" )
		line=${line#*"$comma"}
	done
	name=${sub_arr[0]}
	path=${sub_arr[1]}
	# processing complete, perform installation tasks
	if [ "$1" == "$name" ] || [ "$1" == "all" ]; then
		echo "Installing \"$name\" from \"$path\"";
		cd "$path" &&
			yarn install --frozen-lockfile &&
			cd "$PLUGINS_DIR"
		echo "Complete"
	fi
done
# return to dir
cd "$CURR_DIR"

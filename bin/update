#!/bin/bash
# get current directory
CURR_DIR=$(pwd)
# get script dir
SCRIPT_DIR=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)
PLUGINS_DIR="$SCRIPT_DIR/.."
cd $PLUGINS_DIR
echo "Updating submodules"
# update submodules
git submodule update --init --recursive --remote &&
	echo "Complete"
# return
cd $CURR_DIR

